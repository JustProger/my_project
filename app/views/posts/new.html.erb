<% # app/views/post/new.html.erb %>
<%= form_for :post, url: posts_path do |f| %>
  <h1><%= t(:'add post') %></h1>
  <br/>
  <div class="form-group">
    <%= f.label t('title')+':', for: "title" %>
    <%= f.text_field :title, placeholder: 'Post title' %>
  </div>
  <div class="form-group">
    <%= f.label t('content')+':', for: "main_body" %>
    <%= f.text_area :content, class: "form-control",  rows: "5", id: "main_body" %>
  </div>
  <%= f.submit t('create'), class: 'btn btn-info' %>
<% end %>
