<% # app/views/post/edit.html.erb %>
<%= form_for :comment, method: :put, url: comments_update_path(id: @comment.id) do |f| %>
  <h1><%= t('edit comment') %></h1>
  <br/>
  <%= f.hidden_field :user_id, value: @comment.user_id %>
  <%= f.hidden_field :post_id, value: @comment.post_id %>
  <div class="form-group">
    <%= f.label t('content')+':', for: "main_body" %>
    <%= f.text_area :content, class: "form-control",  rows: "5", id: "main_body", value: @comment.content %>
  </div>
  <%= f.submit t('edit'), class: 'btn btn-info' %>
<% end %>